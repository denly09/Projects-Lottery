<div class="container">
  <div class="d-flex justify-content-center align-content-center">
    <div class="col-md-12 col-lg-8 col-lg-8 col-xl-11">
      <div class="card">
        <div class="card-body">
          <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active" data-bs-interval="2000">
                <%= image_tag "airtime-lottery.png", width: "1200", height: "400", alt: "image" %>
              </div>
              <div class="carousel-item " data-bs-interval="2000">
                <%= image_tag "cellphone.jpeg", width: "1200", height: "400", alt: "image" %>
              </div>
              <div class="carousel-item " data-bs-interval="2000">
                <%= image_tag "laptop.jpeg", width: "1200", height: "400", alt: "image" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<nav class="navbar navbar-expand-lg navbar-light bg-info">
  <marquee width="100%" direction="right" height="20%">
    <strong>Announcement:</strong>
  </marquee>
</nav>
<div class="container">
  <div class="mt-2 d-grid">
    <%= link_to 'Button', "#", class: 'btn btn-warning' %>
  </div>
  <div class="mt-3 d-grid gap-4 d-md-block">
    <%= link_to 'All', users_lottery_index_path, class: 'btn btn-secondary' %>
    <% @categories.each do |category| %>
      <%= link_to category.name, users_lottery_index_path(category: category.name), class: 'btn btn-secondary' %>
    <% end %>
  </div>
  <div class="mt-2">
    <div class="d-flex justify-content-center align-content-center mb-4">
      <div class="row mb-lg-5">
        <% @items.each do |item| %>
          <div class="col-6">
            <div class="card mb-2">
              <div class="card-body ">
                <td><%= link_to (image_tag item.image&.url, width: 600, height: 300, class: "border border-dark-3 rounded-3" if item.image?), users_lottery_path(item) %></td>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>