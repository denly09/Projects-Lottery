<div class="container">
  <div class="container mt-5">
    <h1>Address</h1>
    <div class="card">
      <div class="card-body">
        <table class="table table-hover table-primary text-center">
          <thead>
          <th>Full Name</th>
          <th>Phone Number</th>
          <th>Remarks</th>
          <th>Genre</th>
          <th>Street</th>
          <th colspan="2">Address</th>
          <th colspan="2">Action</th>

          </thead>
          <% @addresses.each do |address| %>
            <tbody>
            <tr>
              <td><%= address.name %></td>
              <td><%= address.phone_number %></td>
              <td><%= address.remark %></td>
              <td>
                <span class="btn btn-secondary" style="border-radius: 20px; padding: 0 8px 0 8px"><%= address.genre %></span>
              </td>
              <td><%= address.street_address %></td>
              <td><%= "#{address.barangay&.name}, #{address.city_municipality&.name}, #{address.province&.name}, #{address.region.name}" %></td>
              <% if address.is_default? %>
                <td><span class="btn btn-warning" style="border-radius: 12px; padding: 0 9px 0 9px">Default</span></td>
              <% else %>
                <td></td>
              <% end %>
              <td><%= link_to 'Edit', edit_users_address_path(address), class: "btn btn-outline-secondary" %></td>
              <td><%= button_to 'Delete', users_address_path(address), method: :delete, :onclick => "return confirm('Are you sure you want to delete?')", class: "btn btn-outline-danger" %></td>
            </tr>
            </tbody>
          <% end %>
        </table>
        <%= link_to 'New address', new_users_address_path, class: "btn btn-dark float-end" %>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>