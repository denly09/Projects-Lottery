<%= render 'layouts/adminheader' %>
<div class="container">
  <div class="container mt-5">
    <h1>Item</h1>
    <div class="card">
      <div class="card-body">
        <table class="table table-hover table-primary text-center">
          <thead>
          <th>Name</th>
          <th colspan="2">Action</th>

          </thead>
          <% @categories.each do |category| %>
            <tbody>
            <tr>
              <td><%= category.name %></td>
              <td><%= link_to 'Edit', edit_admin_category_path(category), class: "btn btn-outline-secondary" %></td>
              <td><%= button_to 'Delete', admin_category_path(category), method: :delete, :onclick => "return confirm('Are you sure you want to delete?')", class: "btn btn-outline-danger" %></td>
            </tr>
            </tbody>
          <% end %>
        </table>
        <%= link_to 'New Item', new_admin_category_path, class: "btn btn-dark float-end" %>
      </div>
    </div>
  </div>
</div>
</thead>

