<div class="card-body">
  <%= form_with model: category, url: path, data: { turbo: false } do |form| %>
    <div class="container  mt-lg-4">
      <% if category.errors.any? %>
        <ul>
          <% category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
          <% end %>
          </ul>
          <div class="card-body">
            <div class="mb-3">
              <% form.label :name %>
              <%= form.text_field :name, class: "form-control", placeholder: 'Item Name' %>
            </div>
            <div class="mb-2">
              <%= form.submit 'Save', class:'btn btn-outline-secondary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>